@model GestionBiblioteca.Models.Autor

@{
    ViewData["Title"] = "Eliminar Autor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-user-times me-2"></i>Eliminar Autor</h4>
    </div>

    <div class="card-body">
        <div class="alert alert-warning">
            <strong>¿Está seguro que desea borrar este registro?</strong>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodAutor)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CodAutor)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreAutor)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreAutor)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nacionalidad)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nacionalidad)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNacimiento)</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <form asp-action="Delete" method="post" class="mb-0">
            <input type="hidden" asp-for="CodAutor" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-1"></i>Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Volver al listado
        </a>
    </div>
</div>
