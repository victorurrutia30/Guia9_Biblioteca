@model IEnumerable<GestionBiblioteca.Models.Autor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:cadetblue">Listado de Autores</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Autor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.CodAutor }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.CodAutor }, new { @class = "btn btn-secondary btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.CodAutor }, new { @class = "btn btn-danger btn-sm" })

            </td>
        </tr>
}
    </tbody>
</table>
