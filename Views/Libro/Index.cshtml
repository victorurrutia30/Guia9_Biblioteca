@model IEnumerable<GestionBiblioteca.Models.Libros>

@{
    ViewData["Title"] = "Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="fas fa-book me-2"></i>Listado de Libros</h4>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Agregar Libro
        </a>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CodLibro)</th>
                        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                        <th>@Html.DisplayNameFor(model => model.Editorial)</th>
                        <th>@Html.DisplayNameFor(model => model.AnioPublicacion)</th>
                        <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                        <th>Autores</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CodLibro)</td>
                            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Editorial)</td>
                            <td>@Html.DisplayFor(modelItem => item.AnioPublicacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaIngreso)</td>
                            <td>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var autor in item.NombresAutores)
                                    {
                                        <span class="badge bg-secondary fs-6">@autor</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="d-flex justify-content-end gap-2 flex-nowrap align-items-center">
                                    <a asp-action="Edit" asp-route-id="@item.CodLibro" class="btn btn-sm btn-outline-primary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CodLibro" class="btn btn-sm btn-outline-secondary" title="Detalles">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CodLibro" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
