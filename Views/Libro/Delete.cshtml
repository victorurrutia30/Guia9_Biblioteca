@model GestionBiblioteca.Models.Libros

@{
    ViewData["Title"] = "Eliminar Libro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Eliminar Libro</h4>
    </div>

    <div class="card-body">
        <div class="alert alert-warning">
            <strong>¿Estás seguro que deseas eliminar este libro?</strong> Esta acción no se puede deshacer.
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodLibro)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CodLibro)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Titulo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Editorial)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Editorial)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AnioPublicacion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.AnioPublicacion)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ISBN)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ISBN)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaIngreso)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaIngreso)</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CodLibro" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Volver al listado
        </a>
    </div>
</div>
